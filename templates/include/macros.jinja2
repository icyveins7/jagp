{# Performs left or right shift for negative/positive values; 0 values are ignored #}
{% macro lrshift(shift) -%}
{% if shift > 0 %} >> {{ shift }}{% elif shift < 0 %} << {{ -shift }}{% endif %}
{%- endmacro %}